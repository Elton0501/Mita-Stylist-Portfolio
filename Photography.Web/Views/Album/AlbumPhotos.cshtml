@model Models.Album
@{
    ViewBag.Title = "FinalAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        overflow: hidden;
    }

    .owl-item {
        height: 75vh;
    }

    .item img {
        height: 75vh;
    }

    .banner-container {
        position: relative;
        display: inline-block; /* or block, depending on your layout */
    }

    .ban-img {
        height: 75vh;
    }

    @@media (max-width:768px) {
        .blb-img {
           width: 100vw !important;
           object-fit: cover;
        }
    }

    @@media (max-width:500px){
        .alb-img {
            width: 100vw !important;
            overflow: hidden;
            display: flex;
            justify-content: center;
            object-fit: cover;
        }
    }

    /* Landscape */
    @@media only screen and (min-width: 1024px) and (max-height: 1366px) and (orientation: landscape) and (-webkit-min-device-pixel-ratio: 1.5) {
        .owl-item {
            height: 78vh;
        }

        .item img {
            height: 78vh;
        }

        .ban-img {
            height: 78vh;
        }
    }

/* Portrait */
@@media only screen
  and (min-width: 1024px)
  and (max-height: 1366px)
  and (orientation: portrait)
  and (-webkit-min-device-pixel-ratio: 1.5) {
    .owl-item {
        height: 85vh;
    }

    .item img {
        height: 85vh;
    }

    .ban-img {
        height: 85vh;
    }
}


</style>

<div class="album owl-carousel owl-theme">
    @foreach (var item in Model.AlbumImages.OrderByDescending(x => x.Id))
    {
        <div class="item">
            <div class="banner-container">
                @{ 
                    var imgClass = item.isLandscape == true ? "blb-img" : "";
                }
                <img class="ban-img alb-img @imgClass" src="@item.Image" />
            </div>
        </div>
    }
</div>

