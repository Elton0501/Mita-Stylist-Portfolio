@model List<Models.Album>
@{
    ViewBag.Title = "PageVisitCount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="product-table">
    <div class="adminpage-head">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-uppercase">Album Visit Count - @Model.Count()<span style="color: var(--success);"></span></h6>
                </div>
                <div>
                </div>

            </div>
            <div class="card-body table-responsive">
                <table class="product-table table table-bordered" id="userTable" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>
                                Album
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Images
                            </th>
                            <th>
                                Visit Count
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count += 1;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @item.AlbumImages.Count()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VisitCount)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


