    function MenuImageClick(i) {
        $.ajax({
            type:'POST',
            url: '@Url.Action("getTravelAlbumImages", "Admin")',
            data: {
                TravelAlbumId: i,
            }
        })
        .done(function (response) {
            if (response != null) {
                $(".modal-body").html("");
                jQuery.each(response, function (index, itemData) {
                    $(".modal-body").append("<img src='" + itemData + "' class='modal-img' style='width:33%;'>");
                });
                $("#myModal").modal("show");
            }
