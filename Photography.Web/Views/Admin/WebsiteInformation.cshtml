@model List<Models.Key>
@{
    ViewBag.Title = "WebsiteInformation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int Count = 0;
}

<div id="key-add-container">

</div>

<div class="key-table">
    <div class="adminpage-head">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-uppercase">Website Information - <span style="color: var(--success);"></span></h6>
                </div>
                <div>
                    <button type="button" class="btn btn-primary" id="add-key" data-toggle="collapse" data-target="#filter-panel">
                        <span class="glyphicon glyphicon-cog"></span> Add New Info
                    </button>
                </div>

            </div>
            <div class="card-body table-responsive">
                <table class="table table-bordered " id="OrderViewTable" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Key Type</th>
                            <th>Key Value</th>
                            <th>Key Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            Count = Count + 1;
                            <tr>
                                <td>@Count</td>
                                <td>@item.Type</td>
                                <td>@item.Name</td>
                                @if (item.Description != null && item.Description != "")
                                {
                                    <td>@item.Description</td>
                                }
                                else
                                {
                                    <td> ------ </td>
                                }
                                <td>
                                    <div class="row">
                                        <div class="button-act col-6"><button class="editbtn btn btn-secondary" type="button" data-id="@item.Id" title="Edit"><i class="bi bi-pencil-square"></i></button></div>
                                        <div class="button-act col-6"><button class="deletebtn btn btn-secondary" type="button" data-id="@item.Id" title="Delete"><i class="bi bi-trash"></i></button></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#key-add-container").hide();
    });

    function focusAction() {
        $('html, body').animate({
            scrollTop: $("#key-add-container").offset().top - 100
        }, 1000);
    }

    $("#add-key").click(function () {
        $("#key-add-container").show();
        $.ajax({
            url: '@Url.Action("InfoAdd", "Admin")',
        })
            .done(function (response) {
                focusAction()
                $("#key-add-container").html(response);
        })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                })
        });
    });

    //--------------Edit-btn--------------------//

    $(".editbtn").click(function() {
        $("#key-add-container").show();
        $.ajax({
            url: '@Url.Action("InfoEdit", "Admin")',
            data: {
                id: $(this).attr('data-id')
            }
        })
        .done(function (response) {
            $("#key-add-container").html(response);
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            $('.loadermodel').hide();
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong!',
            })
        });
    });

    //------------//--Edit-btn--//------------------//

    //--------------Delete-btn--------------------//

    $(".deletebtn").click(function () {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("InfoDelete", "Admin")',
                    data: {
                        id : $(this).attr('data-id')
                    }
                })
                    .done(function (response) {
                        if (response == "True") {
                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Information deleted Successfully',
                                showConfirmButton: false,
                                timer: 1500
                            })
                            setTimeout(function () {// wait for 5 secs(2)
                                window.location.reload(); // then reload the page.(3)
                            }, 1550);
                        }
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    $('.loadermodel').hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    })
                });
            }
        })
    });

    //------------//--Delete-btn--//------------------//
</script>