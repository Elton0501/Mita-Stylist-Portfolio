@model List<Models.Contact>
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="product-table">
    <div class="adminpage-head">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div>
                    <h6 class="m-0 font-weight-bold text-primary text-uppercase">Contact Forms - @Model.Count()<span style="color: var(--success);"></span></h6>
                </div>
                <div>
                </div>

            </div>
            <div class="card-body table-responsive">
                <table class="product-table table table-bordered" id="userTable" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Service
                            </th>
                            <th>
                                Message
                            </th>
                            <th>
                                Date
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count += 1;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.FirstName @item.LastName
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Service
                                </td>
                                <td>
                                    @item.Message
                                </td>
                                <td>
                                    @item.CreatedOn.ToString("MMM-dd-yy")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

