<div class="newsletter">
    <div class="container">
        <h1>JOIN THE <span style="font-size:6vh;">M</span> FAMILY</h1>
        <p>Stay up-to-date with exclusive style updates & more!</p>
        <span class="errorsubscribe"></span>
        <div class="buttonIn">
            <form id="subscribe">
                <input type="text" placeholder="E-mail" name="Email" id="enter" class="subscribeInput">
                <button id="clear" class="subscribeBtn" type="button"><i class="bi bi-chevron-right"></i></button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>

<script>
    function travelAlbumShow() {

    }
    $(document).ready(function () {
        getEcomStyling();
        gettourism();
        getbridalslider();
        getTravelJournal();

        $("a.owl-prev").click(function () {
            $("div.owl-prev").click();
        })
        $("a.owl-next").click(function () {
            $("div.owl-next").click();
        })
        $('.client-carousal').owlCarousel({
            loop: true,
            margin: 20,
            autoplay: true,
            slideTransition: 'linear',
            autoplayTimeout: 3220,
            smartSpeed: 3200,
            dots: true,
            pagination: false,
            navigation: true,
            responsive: {
                0: {
                    items: 3
                },
                600: {
                    items: 5
                },
                1000: {
                    items: 8
                }
            }
        });
    });
    $(".subscribeBtn").click(function () {
        $(".errorsubscribe").html("");
        var input = $(".subscribeInput").val();
        if (input.length > 1) {
            $(".subscribeBtn").prop('disabled', true);
            $.ajax({
                type: 'POST',
                url: '/Home/AddsubscribeForm',
                data: $("#subscribe").serialize(),
                success: function (response) {
                    $(".subscribeBtn").prop('disabled', false);
                    if (response == "true") {
                        jQuery("#subscribe")[0].reset();
                        $(".errorsubscribe").html("* Thanks for joining the M Family");
                    }
                    else {
                        $(".errorsubscribe").html(response);
                    }
                },
                error: function (response) {
                    alert("Something went wrong");
                    $(".subscribeBtn").prop('disabled', false);
                }
            });
            $(".subscribeBtn").prop('disabled', false);
        }
        else {
            $(".errorsubscribe").html("* Email is reqired");
        }
    });
    function getEcomStyling() {
        var searchvalue = "COMMERCIAL & ECOMMERCE STYLING";
        $.ajax({
            type: "POST",
            url: "/Home/SliderData",
            dataType: 'json',
            data: {
                SearchType: searchvalue,
            },
            success: function (response) {
                var returnedData = JSON.parse(response);
                jQuery.each(returnedData, function (index, item) {
                    var variable = '' +
                        '<div class="album-container">' +
                            '<img class="album-cover image" src=" ' + item.ThumbnailImage + '" />' +
                            '<div class="album-info-overlay middle">' +
                                '<div class="text">' +
                                    '<h1>' + item.Name + '</h1>' +
                                    '<a class="view-btn" href="/Album/AlbumPhotos/?AlbumName='+ item.Name +'">VIEW ALL</a>' +
                                '</div>' +
                            '</div>' +
                        '</div>' +
                    '';
                    $("#ecomOwl").append(variable);
                });
                $('.main-content .owl-carousel').owlCarousel({
                    stagePadding: 50,
                    loop: true,
                    autoplay: true,
                    autoplayHoverPause: true,
                    autoplayTimeout: 1520,
                    smartSpeed: 1500,
                    animateIn: 'linear',
                    animateOut: 'linear',
                    margin: 10,
                    nav: true,
                    navText: [
                        '<i class="bi bi-chevron-left"></i>',
                        '<i class="bi bi-chevron-right"></i>'
                    ],
                    navContainer: '.main-content .custom-nav',
                    responsive: {
                        0: {
                            items: 1
                        },
                        600: {
                            items: 3
                        },
                        1000: {
                            items: 4
                        }
                    }
                });
            }
        });
    }

    function gettourism() {
        var searchvalue = "VOGUE INDIA DUBAI X TOURISM";
        $.ajax({
            type: "POST",
            url: "/Home/SliderData",
            dataType: 'json',
            data: {
                SearchType: searchvalue,
            },
            success: function (response) {
                var returnedData = JSON.parse(response);
                var image = $('#BigBanner');
                image.attr('src', returnedData.ThumbnailImage);
                jQuery.each(returnedData.Imgs, function (index, item) {

                    var variable = '' +
                        '        <img id= "tou' + (index + 1) + '" src="' + item + '" />' +
                        '';
                    $("#SmallBanner").append(variable);
                });
            }
        });
    }

    function getTravelJournal() {
        var searchvalue = "TRAVEL & PHOTOGRAPHY JOURNAL";
        $.ajax({
            type: "POST",
            url: "/Home/SliderData",
            dataType: 'json',
            data: {
                SearchType: searchvalue,
            },
            success: function (response) {
                var returnedData = JSON.parse(response);
                var image = $('#travel-ban');
                image.attr('src', returnedData.ThumbnailImage);
                jQuery.each(returnedData.Imgs, function (index, item) {

                    var variable = '' +
                        ' <div class="col-6">' +
                            '<img src = "' + item + '" /> ' +
                        '</div > ' +
                        '';
                    $("#right-small-imgs").append(variable);
                });
            }
        });
    }
    function getbridalslider() {
        var searchvalue = "BRIDAL STYLING";
        $.ajax({
            type: "POST",
            url: "/Home/SliderData",
            dataType: 'json',
            data: {
                SearchType: searchvalue,
            },
            success: function (response) {
                var returnedData = JSON.parse(response);
                var variable = '' +
                    '<div class="item">' +
                    '    <img src="' + returnedData.ThumbnailImage + '" />' +
                    '</div>' +
                    '';
                $(".bridal-carousal").append(variable);
                jQuery.each(returnedData.Imgs, function (index, item) {
                    var variable = '' +
                        '<div class="item">' +
                        '    <img src="' + item + '" />' +
                        '</div>' +
                        '';
                    $(".bridal-carousal").append(variable);
                });
                $('.bridal-carousal').owlCarousel({
                    loop: true,
                    nav: true,
                    navText: [
                        '<i class="bi bi-chevron-left"></i>',
                        '<i class="bi bi-chevron-right"></i>'
                    ],
                    items: 1,
                    autoplay: true,
                    autoplayTimeout: 1520,
                    smartSpeed: 1500,
                    animateOut: 'fadeOut'
                })
            }
        });
    }

    setInterval(function () {

        $(".travel-img").switchClass("travel-img", "slide-img");

        var ban = $('#BigBanner').attr('src');
        var one = $('#tou1').attr('src');
        var two = $('#tou2').attr('src');
        var three = $('#tou3').attr('src');

        $("#BigBanner").attr("src", one);
        $("#tou1").attr("src", two);
        $("#tou2").attr("src", three);
        $("#tou3").attr("src", ban);

        $(".slide-img").switchClass("slide-img", "travel-img");
    }, 7000);
</script>