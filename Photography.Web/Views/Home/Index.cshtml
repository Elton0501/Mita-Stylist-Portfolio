@model DataModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<style>
    .banner {
        position: relative;
    }

    .ban-content {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        padding: 1.5rem 2.5rem;
        background-color: #ffffffc9;
        color: var(--text);
        width: max-content;
    }

    .ban-img img {
        height: 80vh;
        object-fit: cover;
    }

    .ban-content button {
        font-size: 2vh;
        border: 1px solid var(--secondary);
        color: var(--text);
        background-color: transparent;
        box-shadow: 2px 2px;
        padding: 3px 15px;
    }

    .main-content {
        position: relative;
    }

        .main-content .owl-theme .custom-nav {
            position: absolute;
            top: 40%;
            left: 0;
            right: 0;
        }

            .main-content .owl-theme .custom-nav .owl-prev, .main-content .owl-theme .custom-nav .owl-next {
                position: absolute;
                height: 100px;
                color: inherit;
                background: none;
                border: none;
                z-index: 100;
            }

                .main-content .owl-theme .custom-nav .owl-prev i, .main-content .owl-theme .custom-nav .owl-next i {
                    font-size: 2.5rem;
                    color: #cecece;
                }

            .main-content .owl-theme .custom-nav .owl-prev {
                left: 0;
            }

            .main-content .owl-theme .custom-nav .owl-next {
                right: 0;
            }

    .cat-heading {
        padding: 5rem 0 2rem;
        text-align: center;
        color: var(--text);
    }

    .main-content .owl-item {
        margin-right: 0 !important;
    }

    .bridal #sync2 {
        margin-top: 20px;
    }

        .bridal #sync2 .owl-item {
            width: 10px !important;
            height: 10px;
            background: #7d81a3;
            border-radius: 50%;
            margin: 0 6px;
        }

            .bridal #sync2 .owl-item.synced {
                background: #1c277a;
            }

        .bridal #sync2 .owl-wrapper {
            width: auto !important;
            display: inline-block !important;
        }

    .bridal .owl-controls {
        display: none !important;
    }

        .bridal .owl-controls.material-controls {
            display: block !important;
        }

    .bridal .owlwrapper {
        position: relative;
        text-align: center;
        margin-top: 100px;
        margin: 75px auto;
        width: 703px;
    }

    .bridal div.owl-next, .bridal div.owl-prev {
        visibility: hidden;
    }

    .bridal .owl-item img {
        /*box-shadow: 0px 1px 10px black; */
    }

    .bridal .owl-prev, .bridal .owl-next {
        position: absolute !important;
    }

    .bridal button {
        z-index: 99999999999 !important;
        color: grey !important;
    }

    .bridal .owl-prev {
        top: 42%;
        left: -70px;
    }

    .bridal .owl-next {
        top: 42%;
        right: -70px;
    }

    .bridal i {
        color: #1c277a !important;
    }

    .bridal-slider {
        padding: 1rem 0;
        background-image: url('../../content/images/bridalbg.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .travel img {
        padding-bottom: calc(var(--bs-gutter-x) * .5);
        padding-top: calc(var(--bs-gutter-x) * .5);
    }

    .travel-btn a {
        font-size: 2vh;
        border: 1px solid var(--secondary);
        color: var(--text);
        background-color: transparent;
        box-shadow: 2px 2px;
        padding: 10px 25px;
        text-decoration:none;
    }

    .travel-small {
        padding: 0;
    }

    .timg-box img {
        padding-bottom: 1.7vh;
    }

    .clients {
        padding-bottom: 9vh;
    }

    .newsletter {
        text-align: center;
        padding: 5vh 0 8vh;
        background-color: var(--secondary);
        color: #ffffff;
    }

    

        .buttonIn input {
            margin: 0px;
            padding: 0px;
            width: 100%;
            outline: none;
            height: 35px;
            padding-left: 5px;
            border-width: 0 0 2px 0;
            border-color: #ffffff;
            background: var(--secondary) !important;
        }

            .buttonIn input::placeholder {
                color: #ffffff;
            }

        .buttonIn button {
            position: absolute;
            top: 0;
            right: 0px;
            z-index: 2;
            border: none;
            top: 2px;
            height: 30px;
            cursor: pointer;
            color: white;
            transform: translateX(2px);
            background: var(--secondary) !important;
        }

    .buttonIn {
        width: 30%;
        position: relative;
        margin: auto;
    }

    .slide-img {
        transform: scale(0.98);
        animation: scale 3s forwards cubic-bezier(0.5, 1, 0.89, 1);
    }

    .album-container {
        position: relative;
    }

    .image {
        opacity: 1;
        display: block;
        width: 100%;
    }

    .middle {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: #000000;
    }

    .album-container:hover .image {
        opacity: 0.7;
    }

    .album-container:hover .middle {
        opacity: 0.7;
    }

    .album-info-overlay h1 {
        color: white;
    }

    .album-info-overlay a {
        color: white;
        text-decoration: none;
        border: 1px solid white;
        padding: 5px 15px;
    }

    .text {
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }

    @@keyframes scale {
        100% {
            transform: scale(1);
        }
    }


    @@media (max-width: 869px) {
        .bridal .owl-prev {
            left: -19px;
        }

        .bridal .owl-next {
            right: -19px;
        }
    }

    @@media (max-width: 809px) {
        .bridal .owlwrapper {
            width: 100%;
        }
    } 
    
    @@media (max-width: 770px) {
        .buttonIn {
            width: 45%;
            position: relative;
            margin: auto;
        }
    } 
    
    @@media (max-width: 500px) {
        .buttonIn {
            width: 80%;
            position: relative;
            margin: auto;
        }
    }

    @@media (max-width: 575px) {
        .bridal .owl-prev {
            left: 10px;
        }

        .bridal .owl-next {
            right: 10px;
        }
    }
        
</style>

